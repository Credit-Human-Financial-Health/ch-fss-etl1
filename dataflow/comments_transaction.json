{
	"name": "comments_transaction",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Trans_comments",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "comments_sink",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TranId as integer,",
				"          CommentID as integer,",
				"          PARENTID as integer,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as date,",
				"          POSTTIME as string,",
				"          Comment as string,",
				"          PWC_Key as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(transaction_id = toString(PWC_Key) + toString(CommentID),",
				"          time = lpad(toString(POSTTIME), 4, '0')) ~> derivedColumn1",
				"derivedColumn1 derive(post_date = concat(\r",
				"  toString(POSTDATE, 'yyyy-MM-dd'), \r",
				"  ' ', \r",
				"  substring(lpad(toString(time), 4, '0'), 0, 2), \r",
				"  ':', \r",
				"  substring(lpad(toString(time), 4, '0'), 2, 2)\r",
				")) ~> derivedColumn2",
				"derivedColumn2 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          comment_id as long,",
				"          post_date as timestamp,",
				"          comment_value as string,",
				"          created_date as timestamp,",
				"          created_by as string,",
				"          updated_date as timestamp,",
				"          updated_by as string,",
				"          transaction_id as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          comment_id = CommentID,",
				"          post_date,",
				"          comment_value = Comment,",
				"          transaction_id",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}