{
	"name": "comments_transaction",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Trans_comments",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "comments_sink",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "surrogateKey"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TranId as string,",
				"          CommentID as string,",
				"          PARENTID as integer,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as date,",
				"          POSTTIME as string,",
				"          Comment as string,",
				"          PWC_Key as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(comment_id = concat(TranId, CommentID),",
				"          transaction_id = PARENTID) ~> derivedColumn1",
				"derivedColumn1 keyGenerate(output(transaction_id as long),",
				"     startAt: 1L,",
				"     stepValue: 1L,",
				"     partitionBy('hash', 1)) ~> surrogateKey",
				"surrogateKey sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          comment_id as long,",
				"          post_date as timestamp,",
				"          comment_value as string,",
				"          created_date as timestamp,",
				"          created_by as string,",
				"          updated_date as timestamp,",
				"          updated_by as string,",
				"          transaction_id as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          comment_id,",
				"          post_date = POSTDATE,",
				"          comment_value = Comment,",
				"          transaction_id",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}