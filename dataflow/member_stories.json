{
	"name": "member_stories",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "member_stories",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "member_stories_sink",
						"type": "DatasetReference"
					},
					"name": "sink",
					"rejectedDataLinkedService": {
						"referenceName": "AzureBlobStorage1",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "derivedColumn2"
				},
				{
					"name": "flatten1"
				},
				{
					"name": "filter1"
				},
				{
					"name": "derivedColumn3"
				},
				{
					"name": "surrogateKey1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Comments as string,",
				"          DetailEntryValue as string,",
				"          Value as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> source",
				"source derive(fsh_name = substring(\r",
				"    Comments,\r",
				"    locate('Added by: ', Comments) + length('Added by: '),\r",
				"    locate(' - ', Comments) - (locate('Added by: ', Comments) + length('Added by: '))\r",
				"),",
				"          id = substring(\r",
				"    Comments,\r",
				"    locate(' - ', Comments) + length(' - '),\r",
				"    locate(' -- ', Comments) - (locate(' - ', Comments) + length(' - '))\r",
				"),",
				"          branch_id = substring(\r",
				"    Comments,\r",
				"    locate(' -- ', Comments) + length(' -- '),\r",
				"    locate(' On: ', Comments) - (locate(' -- ', Comments) + length(' -- '))\r",
				"),",
				"          story_date = substring(\r",
				"    Comments,\r",
				"    locate('On: ', Comments) + length('On: '),\r",
				"    locate('***', Comments, locate('***', Comments) + 1) - (locate('On: ', Comments) + length('On: '))\r",
				"),",
				"          comments_array = split(Comments, '***')) ~> derivedColumn2",
				"derivedColumn2 foldDown(unroll(comments_array),",
				"     mapColumn(",
				"          Comments,",
				"          DetailEntryValue,",
				"          Value,",
				"          fsh_name,",
				"          id,",
				"          branch_id,",
				"          story_date,",
				"          comments_array",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> flatten1",
				"derivedColumn3 filter(length(replace(toString(comments_array), ' ', '')) > 0",
				"&& !startsWith(toString(comments_array), 'Added by:')) ~> filter1",
				"flatten1 derive(story_id = id,",
				"          story_reason = comments_array,",
				"          story_date = toTimestamp(story_date, 'yyyy-MM-dd HH:mm:ss')) ~> derivedColumn3",
				"filter1 keyGenerate(output(story_id as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"surrogateKey1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          story_id as long,",
				"          story_date as timestamp,",
				"          story_reason as string,",
				"          story_details as string,",
				"          fhs_name as string,",
				"          fhs_id as string,",
				"          branch_id as string,",
				"          account_id as integer,",
				"          story_source_type_code_id as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     mapColumn(",
				"          story_id,",
				"          story_date,",
				"          story_details = Value,",
				"          fhs_name = fsh_name,",
				"          fhs_id = story_id,",
				"          branch_id,",
				"          story_reason",
				"     )) ~> sink"
			]
		}
	}
}