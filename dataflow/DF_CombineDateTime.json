{
	"name": "DF_CombineDateTime",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "incomingfilesfolder",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "incomingfilesfolder",
						"type": "DatasetReference"
					},
					"name": "sink",
					"rejectedDataLinkedService": {
						"referenceName": "AzureBlobStorage1",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "CombineDateTime"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PWC_Key as short,",
				"          BALSEGCOUNT as boolean,",
				"          COMMENTCODE as boolean,",
				"          TRANSFERCODE as boolean,",
				"          ADJUSTMENTCODE as boolean,",
				"          REGECODE as boolean,",
				"          REGDCHECKCODE as boolean,",
				"          REGDTRANSFERCODE as boolean,",
				"          VOIDCODE as boolean,",
				"          SUBACTIONCODE as string,",
				"          SEQUENCENUMBER as integer,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as string,",
				"          POSTTIME as short,",
				"          USERNUMBER as short,",
				"          USEROVERRIDE as short,",
				"          SECURITYLEVELS as boolean,",
				"          DESCRIPTION as string,",
				"          ACTIONCODE as string,",
				"          SOURCECODE as string,",
				"          BALANCECHANGE as double,",
				"          INTEREST as double,",
				"          NEWBALANCE as double,",
				"          FEEAMOUNT as double,",
				"          ESCROWAMOUNT as double,",
				"          LASTTRANDATE as string,",
				"          MATURITYLOANDUEDATE as string,",
				"          COMMENT as string,",
				"          BRANCH as short,",
				"          CONSOLENUMBER as short,",
				"          BATCHSEQUENCE as short,",
				"          SALESTAXAMOUNT as double,",
				"          ACTIVITYDATE as string,",
				"          BILLEDFEEAMOUNT as double,",
				"          PROCESSORUSER as short,",
				"          MEMBERBRANCH as string,",
				"          PREVAVAILBALANCE as double,",
				"          SUBSOURCE as short,",
				"          CONFIRMATIONSEQ as integer,",
				"          RECURRINGTRAN as boolean,",
				"          FEEEXMTCRTSYAMT as double,",
				"          ESCROWUNPAIDBALCHG as double,",
				"          ESCROWAPPLIEDBALCHG as double,",
				"          UNAPPLIEDPARTIALPMTCHG as double,",
				"          FEECOUNTBY as boolean,",
				"          LATECHGWAIVEDAMT as double,",
				"          LATECHGUNPAIDCHGAMT as double,",
				"          PREVLATECHGDATE as string,",
				"          PREVLATECHGACCRUED as double,",
				"          LATECHGFIELDSVALID as boolean,",
				"          BALSEGID1 as string,",
				"          BALSEGPMTCHANGEDATE1 as string,",
				"          INTEFFECTDATE as string,",
				"          BALSEGPREVFIRSTPMTDATE1 as string,",
				"          DRAFTNUMBER as string,",
				"          TRACERNUMBER as string,",
				"          DISPOSITIONFEE as double,",
				"          TERMINATIONFEE as double,",
				"          MISCEXPENSEAMOUNT as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> source",
				"source derive(transaction_date = toTimestamp(\r",
				"  concat(toString(POSTDATE, 'yyyy-MM-dd'), ' ', toString(POSTTIME)),\r",
				"  'yyyy-MM-dd HH:mm:ss.SSS'\r",
				"),",
				"          transaction_code = case(\r",
				"  toString(ACTIONCODE) == 'D', 1,\r",
				"  toString(ACTIONCODE) == 'W', 2,\r",
				"  toString(ACTIONCODE) == 'F', 3,\r",
				"  toString(ACTIONCODE) == 'C', 0\r",
				"),",
				"     partitionBy('hash', 1)) ~> CombineDateTime",
				"CombineDateTime sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          PWC_Key as string,",
				"          BALSEGCOUNT as string,",
				"          COMMENTCODE as string,",
				"          TRANSFERCODE as string,",
				"          ADJUSTMENTCODE as string,",
				"          REGECODE as string,",
				"          REGDCHECKCODE as string,",
				"          REGDTRANSFERCODE as string,",
				"          VOIDCODE as string,",
				"          SUBACTIONCODE as string,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as string,",
				"          POSTTIME as string,",
				"          USERNUMBER as string,",
				"          USEROVERRIDE as string,",
				"          SECURITYLEVELS as string,",
				"          DESCRIPTION as string,",
				"          ACTIONCODE as string,",
				"          SOURCECODE as string,",
				"          BALANCECHANGE as string,",
				"          INTEREST as string,",
				"          NEWBALANCE as string,",
				"          FEEAMOUNT as string,",
				"          ESCROWAMOUNT as string,",
				"          LASTTRANDATE as string,",
				"          MATURITYLOANDUEDATE as string,",
				"          COMMENT as string,",
				"          BRANCH as string,",
				"          CONSOLENUMBER as string,",
				"          BATCHSEQUENCE as string,",
				"          SALESTAXAMOUNT as string,",
				"          ACTIVITYDATE as string,",
				"          BILLEDFEEAMOUNT as string,",
				"          PROCESSORUSER as string,",
				"          MEMBERBRANCH as string,",
				"          PREVAVAILBALANCE as string,",
				"          SUBSOURCE as string,",
				"          CONFIRMATIONSEQ as string,",
				"          RECURRINGTRAN as string,",
				"          FEEEXMTCRTSYAMT as string,",
				"          ESCROWUNPAIDBALCHG as string,",
				"          ESCROWAPPLIEDBALCHG as string,",
				"          UNAPPLIEDPARTIALPMTCHG as string,",
				"          FEECOUNTBY as string,",
				"          LATECHGWAIVEDAMT as string,",
				"          LATECHGUNPAIDCHGAMT as string,",
				"          PREVLATECHGDATE as string,",
				"          PREVLATECHGACCRUED as string,",
				"          LATECHGFIELDSVALID as string,",
				"          BALSEGID1 as string,",
				"          BALSEGPMTCHANGEDATE1 as string,",
				"          INTEFFECTDATE as string,",
				"          BALSEGPREVFIRSTPMTDATE1 as string,",
				"          DRAFTNUMBER as string,",
				"          TRACERNUMBER as string,",
				"          DISPOSITIONFEE as string,",
				"          TERMINATIONFEE as string,",
				"          MISCEXPENSEAMOUNT as string",
				"     ),",
				"     partitionFileNames:['transaction.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     partitionBy('hash', 1)) ~> sink"
			]
		}
	}
}