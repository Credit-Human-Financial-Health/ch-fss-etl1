{
	"name": "DF_COMMENTS",
	"properties": {
		"folder": {
			"name": "FSS_DATAFLOW"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "trans_comments_csv",
						"type": "DatasetReference"
					},
					"name": "SOURCECOMMENTS"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "trans_comment_sink",
						"type": "DatasetReference"
					},
					"name": "COMMMENTSTABLE"
				}
			],
			"transformations": [
				{
					"name": "COLUMNSDERIVED"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TranId as string,",
				"          CommentID as string,",
				"          PARENTID as string,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as string,",
				"          POSTTIME as string,",
				"          Comment as string,",
				"          PWC_Key as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SOURCECOMMENTS",
				"SOURCECOMMENTS derive(comment_id = concat(TranId, CommentID),",
				"          transction_date = toTimestamp(\r",
				"    toString(POSTDATE) + ' ' + \r",
				"    substring(lpad(toString(POSTTIME), 4, '0'), 0, 2) + ':' + \r",
				"    substring(lpad(toString(POSTTIME), 4, '0'), 3, 4),\r",
				"    'yyyy-MM-dd HH:mm'\r",
				")) ~> COLUMNSDERIVED",
				"COLUMNSDERIVED sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          comment_id as long,",
				"          post_date as timestamp,",
				"          comment_value as string,",
				"          created_date as timestamp,",
				"          created_by as string,",
				"          updated_date as timestamp,",
				"          updated_by as string,",
				"          transaction_id as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          comment_id,",
				"          post_date = transction_date,",
				"          comment_value = Comment,",
				"          transaction_id = TranId",
				"     ),",
				"     partitionBy('hash', 1)) ~> COMMMENTSTABLE"
			]
		}
	}
}